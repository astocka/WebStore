@model WebStore.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "The Web Store";
}

<div class="mt-5">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-4">
                <form class="login-box col-md-12" id="login-form" asp-action="Login" method="post">
                    <div class="text-center">
                        <p class="h3 mb-3 font-weight-normal display-4">Log In</p>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login" class="sr-only"></label>
                        <input class="form-control d-block" style="width: 100%" asp-for="Login" placeholder="Login" required autofocus />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="sr-only"></label>
                        <input type="password" class="form-control d-block showpassword" style="width: 100%" id="password" asp-for="Password" placeholder="Password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <label>
                        <input asp-for="RememberMe" type="checkbox">Remember me
                    </label>
                    <div class="form-group">
                        <button class="btn-lg btn-secondary btn-block" type="button" name="showpassword" id="showpassword" value="Show Password">Show Password</button>
                        <button type="submit" class="btn btn-lg btn-warning btn-block">Log In</button>
                    </div>
                    <div class="text-justify">
                        Create an account <a asp-action="Register" class="link">here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>